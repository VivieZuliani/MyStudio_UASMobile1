<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:background="@drawable/pinkwallp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAction">

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_action1"
                android:layout_width="350dp"
                android:layout_height="266dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/action_Movie1"
                    android:layout_width="168dp"
                    android:layout_height="254dp"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/teks_Deskription1"
                    android:layout_gravity="left"
                    android:src="@drawable/gbhunt" />

                <TextView
                    android:id="@+id/action_Title1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/action_Movie1"
                    android:text="HUNT"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teks_Deskription1"
                    android:layout_width="179dp"
                    android:layout_height="183dp"
                    android:layout_below="@id/action_Title1"
                    android:layout_gravity="right"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@id/action_Movie1"
                    android:maxLines="11"
                    android:text="@string/mova3_hunt"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/hunt"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teks_Deskription1"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/action_Movie1"
                    android:onClick="playHuntTrailer"
                    android:text="Trailer" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_action2"
                android:layout_width="350dp"
                android:layout_height="266dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/action_Title2"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/action_Movie2"
                    android:text="GUARDIAN OF GALAXY"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teks_Deskription2"
                    android:layout_width="179dp"
                    android:layout_height="183dp"
                    android:layout_below="@id/action_Title2"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@id/action_Movie2"
                    android:maxLines="11"
                    android:text="@string/mova4_guardian"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/action_Movie2"
                    android:layout_width="168dp"
                    android:layout_height="254dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@id/teks_Deskription2"
                    android:src="@drawable/gbguardian" />

                <Button
                    android:id="@+id/guardian"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teks_Deskription2"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/action_Movie2"
                    android:onClick="playGuardianTrailer"
                    android:text="TRAILER" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_action3"
                android:layout_width="350dp"
                android:layout_height="266dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/action_Movie3"
                    android:layout_width="168dp"
                    android:layout_height="254dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/gb1" />

                <TextView
                    android:id="@+id/action_Title3"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/action_Movie3"
                    android:text="FAST X"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/teks_Deskription3"
                    android:layout_width="179dp"
                    android:layout_height="183dp"
                    android:layout_below="@id/action_Title3"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@id/action_Movie3"
                    android:maxLines="11"
                    android:text="@string/mova2_fastx"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/fastx"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teks_Deskription3"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/action_Movie3"
                    android:onClick="playFastXTrailer"
                    android:text="Trailer" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cd_action4"
                android:layout_width="350dp"
                android:layout_height="266dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/action_movieo4"
                    android:layout_width="168dp"
                    android:layout_height="254dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/gbtimetohunt" />

                <TextView
                    android:id="@+id/action_Title4"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:text="TIME TO HUNT"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/teks_Deskription4"
                    android:layout_width="179dp"
                    android:layout_height="183dp"
                    android:layout_below="@id/action_Title4"
                    android:layout_gravity="right"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="35dp"
                    android:layout_toRightOf="@+id/action_movieo4"
                    android:maxLines="11"
                    android:text="@string/mova1_timetohunt"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/timetohunt"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/teks_Deskription4"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="bottom|right"
                    android:layout_toRightOf="@+id/action_movieo4"
                    android:onClick="playTimeToHuntTrailer"
                    android:text="Trailer" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>